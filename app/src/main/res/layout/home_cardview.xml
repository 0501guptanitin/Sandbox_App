<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/CardView"
    android:layout_marginLeft="55dp"
    android:layout_marginTop="40dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="3dp"
    android:clickable="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>
    <TextView
        android:id="@+id/heading"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:text="Kainskep Services"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:textSize="16sp"
        android:textColor="@color/black"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:orientation="horizontal">
    <ImageView
        android:id="@+id/computer"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/computer"
        android:layout_marginLeft="20dp"
        />

        <ImageView
            android:id="@+id/net"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/net"
            android:layout_marginLeft="20dp"/>

        <ImageView
            android:id="@+id/sql"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/sql"
            android:layout_marginLeft="20dp"/>

        <ImageView
            android:id="@+id/application"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/application"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/text1"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="Virtual Machine"
            android:textAlignment="center"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:id="@+id/text2"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="Web Apps"
            android:textAlignment="center"
            android:layout_marginLeft="19dp"/>
        <TextView
            android:id="@+id/text3"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="Sql Database"
            android:textAlignment="center"
            android:layout_marginLeft="9dp"/>
        <TextView
            android:id="@+id/text4"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Application Insights"
            android:textAlignment="center"
            android:layout_marginLeft="4dp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>