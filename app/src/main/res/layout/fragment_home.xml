<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeActivity">

       <ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:id="@+id/layout_home1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <androidx.cardview.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/CardView"
            app:cardCornerRadius="8dp"
            app:cardElevation="30dp"
            android:layout_margin="10dp"
            android:clickable="true"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>
            <TextView
                android:id="@+id/heading"
                android:layout_width="180dp"
                android:layout_height="25dp"
                android:text="Kainskep Services"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:textSize="19sp"
                android:textColor="@color/black"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="55dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/computer"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:src="@drawable/virtual"
                    android:layout_marginLeft="30dp"
                    />

                <ImageView
                    android:id="@+id/net"
                    android:layout_width="40dp"
                    android:layout_height="55dp"
                    android:src="@drawable/web"
                    android:layout_marginLeft="30dp"/>

                <ImageView
                    android:id="@+id/sql"
                    android:layout_width="40dp"
                    android:layout_height="45dp"
                    android:src="@drawable/sql1"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="30dp"/>

                <ImageView
                    android:id="@+id/application"
                    android:layout_width="40dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/application"
                    android:layout_marginLeft="38dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="120dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/text1"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="Virtual Machine"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:layout_marginLeft="29dp"/>
                <TextView
                    android:id="@+id/text2"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="Web Apps"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:layout_marginLeft="18dp"/>
                <TextView
                    android:id="@+id/text3"
                    android:layout_width="60dp"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:text="Sql Database"
                    android:textAlignment="center"
                    android:layout_marginLeft="12dp"/>
                <TextView
                    android:id="@+id/text4"
                    android:layout_width="80dp"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:text="Application Insights"
                    android:textAlignment="center"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/CardView1"
            android:layout_margin="10dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="30dp"
            android:clickable="true"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="5dp">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Alerts"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_margin="10dp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="SEE ALL"
                        android:textColor="#898989"
                        android:textSize="20sp"
                        android:layout_marginLeft="120dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="5dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Chart view"
                        android:layout_margin="10dp"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        />

                    <Switch
                        android:id="@+id/switch_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textOn="ON"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="140dp"
                        android:layout_centerInParent="true"
                        android:textOff="OFF"
                        android:thumb="@drawable/switch_button"
                        tools:ignore="UseSwitchCompatOrMaterialXml"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="5dp">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:src="@drawable/notifications_icon"
                        android:layout_margin="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No alerts in the last 24 hours"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:layout_width="240dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center"
                        android:text="Your latest fired alerts will show here. To learn how to cconfgure alerts,"
                        android:textColor="@color/black" />

                    <Button
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="click here"
                        android:layout_gravity="center_horizontal"
                        android:textSize="16sp"
                        />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/CardView3"
            android:layout_margin="10dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="30dp"
            android:clickable="true"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recent Resources"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="15dp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="SEE ALL"
                        android:textColor="#898989"
                        android:textSize="20sp"
                        android:layout_marginLeft="65dp"
                        android:layout_marginTop="30dp"
                        />
                </LinearLayout>

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_margin="30dp"
                    android:src="@drawable/cube_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:layout_margin="30dp"
                    android:text="No recent resources to display. As you visit resources, they will be listed here for quick access."/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/CardView5"
            android:layout_margin="10dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="30dp"
            android:clickable="true"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Service Health"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView

                        android:id="@+id/CardView6"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:clickable="true"
                        app:cardBackgroundColor="#AAA5A5"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="8dp"
                        app:cardMaxElevation="12dp"
                        app:cardPreventCornerOverlap="true">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="5dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Health Issues"
                                android:textSize="18sp"
                                android:textColor="@color/black"
                                android:layout_margin="5dp"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_margin="5dp">
                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/issues"
                                    />
                                <TextView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:text="0"
                                    android:textSize="30sp"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:layout_marginLeft="15dp"/>
                            </LinearLayout>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView

                        android:id="@+id/CardView8"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:clickable="true"
                        app:cardBackgroundColor="#AAA5A5"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="8dp"
                        app:cardMaxElevation="12dp"
                        app:cardPreventCornerOverlap="true">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="5dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Maintenance"
                                android:textSize="18sp"
                                android:textColor="@color/black"
                                android:layout_margin="5dp"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_margin="5dp">
                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/clock"
                                    />
                                <TextView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:text="0"
                                    android:textSize="30sp"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:layout_marginLeft="15dp"/>
                            </LinearLayout>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView

                        android:id="@+id/CardView9"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:clickable="true"
                        app:cardBackgroundColor="#AAA5A5"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="8dp"
                        app:cardMaxElevation="12dp"
                        app:cardPreventCornerOverlap="true">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="5dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Health advisories"
                                android:textSize="18sp"
                                android:textColor="@color/black"
                                android:layout_margin="5dp"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_margin="5dp">
                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/heart"
                                    />
                                <TextView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:text="0"
                                    android:textSize="30sp"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:layout_marginLeft="15dp"/>
                            </LinearLayout>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView

                        android:id="@+id/CardView7"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:clickable="true"
                        app:cardBackgroundColor="#AAA5A5"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="8dp"
                        app:cardMaxElevation="12dp"
                        app:cardPreventCornerOverlap="true">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:text="Security advisories"
                                android:textColor="@color/black"
                                android:textSize="18sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/security" />

                                <TextView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_marginLeft="15dp"
                                    android:text="0"
                                    android:textColor="@color/black"
                                    android:textSize="30sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView

            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/CardView10"
            android:layout_margin="10dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="30dp"
            android:clickable="true"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Resource groups"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/black"
                    android:textSize="18dp"/>
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/resourc_grp"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/CardView4"
            android:layout_margin="10dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="30dp"
            android:clickable="true"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Favorites Resources"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="15dp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="SEE ALL"
                        android:textColor="#898989"
                        android:textSize="20sp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="30dp"
                        />
                </LinearLayout>
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/star_icon"
                    android:layout_gravity="center"
                    android:layout_margin="30dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:layout_margin="30dp"
                    android:text="You don't have any favorite resources yet. Try changing your filter."/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>

</RelativeLayout>